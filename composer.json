{
    "name": "1tomany/data-uri",
    "description": "A simple, low dependency library to parse and decode data URIs defined in RFC 2397",
    "license": "MIT",
    "type": "library",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "keywords": [
        "datauri",
        "data uri",
        "data-uri",
        "2397",
        "rfc2397",
        "rfc 2397"
    ],
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-fileinfo": "*",
        "symfony/filesystem": "^7.2|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "OneToMany\\DataUri\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OneToMany\\DataUri\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "./vendor/bin/php-cs-fixer fix",
        "stan": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit"
    },
    "authors": [
        {
            "name": "Vic Cherubini",
            "email": "vcherubini@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    }
}
